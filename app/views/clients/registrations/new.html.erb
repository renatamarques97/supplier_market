<div class="div-login-sign">
  <h2><%= t(".title") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "clients/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :telephone %><br />
      <%= f.telephone_field :telephone %>
    </div>

    <div class="field">
      <%= f.label :cnpj %><br />
      <%= f.text_field :cnpj %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= "#{@minimum_password_length} #{t('.characters_minimum')}" %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit t(".sign_up"), class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "clients/shared/links" %>
</div>
