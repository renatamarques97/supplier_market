<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "providers/shared/error_messages", resource: resource %>

  <div class="div-form">
    <h2><%= t(".title") %></h2>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :telephone %><br />
      <%= f.telephone_field :telephone %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(<%= t(".leave_blank") %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em>(<%= "#{@minimum_password_length} #{t(".characters_minimum")}" %>)</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(<%= t(".need_pasword") %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit t(".update"), class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<div class="div-form">
  <h3><%= t(".ask_cancel") %></h3>

  <p><%= button_to "#{t(".cancel_account")}?",
                   registration_path(resource_name),
                   data: { confirm: t(".sure?") }, method: :delete, class: "btn btn-warning" %>
  </p>
</div>
